html
    head
        title= title
        link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css")
        link(rel='stylesheet', href='/css/stylesheet.css')
        
    body
        include ./header.pug
        div(class="container")
            -var dogs = users
            h1 All About #{dogs[0].name}    
            div(class="row")
                div(id= dogs[0].id, class="col-xs-6 col-md-3")
                    div(class="thumbnail")
                        img(src= dogs[0].img)
                        p Name: #{dogs[0].name}
                        p Owner: #{dogs[0].owner}
                        form(method='POST', action='/' + dogs[0].id + '?_method=DELETE')
                            button(class='btn btn-danger', id='submit', type='submit') Delete
        script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
        script(src='/js/myscript.js')
        include ./footer.pug